<div class="forms">
    <form>
    {{input value=answer id='answer' placeholder='Post new answer'}}
    {{input value=author id='author' placeholder='username'}}
    {{#bs-button type="success" onClick=(action 'newAns')}} Post Answer {{/bs-button}}
</form>
</div>
{{!--List Answers--}}
{{#each question.answer as |ans|}}
    <li>{{ans.answer}} -- {{ans.author}}</li>
{{/each}}